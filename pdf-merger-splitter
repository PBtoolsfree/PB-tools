<body>

    <div class="container">
        <!-- Tabs -->
        <div class="tabs">
            <button class="tab-btn active" onclick="switchTab('merge')">Merge PDFs</button>
            <button class="tab-btn" onclick="switchTab('split')">Split PDF</button>
        </div>

        <!-- MERGE SECTION -->
        <div id="merge-section" class="section active">
            <h2>Merge PDFs</h2>
            <p class="desc">Combine multiple PDF files into one document.</p>

            <div class="upload-area" id="merge-drop">
                <span class="icon">üìë</span>
                <h3>Click to Add PDFs</h3>
                <p style="color:#94a3b8; font-size:0.8rem">Select multiple files</p>
                <input type="file" id="merge-input" accept="application/pdf" multiple>
            </div>

            <div class="file-list" id="merge-list">
                <!-- File items appear here -->
            </div>

            <p class="status" id="merge-status"></p>

            <button class="btn btn-primary" id="btn-merge" onclick="mergePDFs()" disabled>
                Combine & Download
            </button>
        </div>

        <!-- SPLIT SECTION -->
        <div id="split-section" class="section">
            <h2>Split PDF</h2>
            <p class="desc">Extract pages from a PDF document.</p>

            <div class="upload-area" id="split-drop">
                <span class="icon">‚úÇÔ∏è</span>
                <h3 id="split-filename">Click to Select PDF</h3>
                <input type="file" id="split-input" accept="application/pdf">
            </div>

            <div class="input-group" id="split-options" style="opacity: 0.5; pointer-events: none;">
                <label>Page Range to Extract:</label>
                <input type="text" id="page-range" placeholder="e.g., 1-3, 5, 8-10">
                <p style="font-size: 0.8rem; color: #64748b; margin-top: 5px;">
                    Enter page numbers or ranges separated by commas.
                </p>
            </div>

            <p class="status" id="split-status"></p>

            <button class="btn btn-primary" id="btn-split" onclick="splitPDF()" disabled>
                Extract & Download
            </button>
        </div>
    </div>

    <script>
        const { PDFDocument } = PDFLib;

        // --- State Management ---
        let mergeFiles = [];
        let splitFileBytes = null;
        let splitFileName = "";

        // --- Tab Logic ---
        function switchTab(tab) {
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            
            if(tab === 'merge') {
                document.querySelector('button[onclick="switchTab(\'merge\')"]').classList.add('active');
                document.getElementById('merge-section').classList.add('active');
            } else {
                document.querySelector('button[onclick="switchTab(\'split\')"]').classList.add('active');
                document.getElementById('split-section').classList.add('active');
            }
        }

        // --- MERGE LOGIC ---

        const mergeInput = document.getElementById('merge-input');
        const mergeList = document.getElementById('merge-list');
        const btnMerge = document.getElementById('btn-merge');

        mergeInput.addEventListener('change', async (e) => {
            const files = Array.from(e.target.files);
            for (const file of files) {
                mergeFiles.push({
                    name: file.name,
                    data: await file.arrayBuffer()
                });
            }
            updateMergeList();
            mergeInput.value = ''; // Reset to allow adding same file again
        });

        function updateMergeList() {
            mergeList.innerHTML = '';
            mergeFiles.forEach((file, index) => {
                const div = document.createElement('div');
                div.className = 'file-item';
                div.innerHTML = `
                    <span>${index + 1}. ${file.name}</span>
                    <button class="remove-btn" onclick="removeMergeFile(${index})">‚úï</button>
                `;
                mergeList.appendChild(div);
            });
            btnMerge.disabled = mergeFiles.length < 2;
        }

        function removeMergeFile(index) {
            mergeFiles.splice(index, 1);
            updateMergeList();
        }

        async function mergePDFs() {
            const status = document.getElementById('merge-status');
            btnMerge.disabled = true;
            btnMerge.innerText = 'Merging...';
            status.innerText = 'Processing...';

            try {
                const mergedPdf = await PDFDocument.create();

                for (const fileObj of mergeFiles) {
                    const pdf = await PDFDocument.load(fileObj.data);
                    const copiedPages = await mergedPdf.copyPages(pdf, pdf.getPageIndices());
                    copiedPages.forEach((page) => mergedPdf.addPage(page));
                }

                const pdfBytes = await mergedPdf.save();
                const blob = new Blob([pdfBytes], { type: "application/pdf" });
                saveAs(blob, "merged_document.pdf");

                status.innerText = 'Success! Download started.';
            } catch (err) {
                console.error(err);
                status.innerText = 'Error: ' + err.message;
            } finally {
                btnMerge.disabled = false;
                btnMerge.innerText = 'Combine & Download';
            }
        }

        // --- SPLIT LOGIC ---

        const splitInput = document.getElementById('split-input');
        const splitFilenameDisplay = document.getElementById('split-filename');
        const splitOptions = document.getElementById('split-options');
        const btnSplit = document.getElementById('btn-split');

        splitInput.addEventListener('change', async (e) => {
            const file = e.target.files[0];
            if (file) {
                splitFileName = file.name.replace('.pdf', '');
                splitFilenameDisplay.innerText = file.name;
                splitFileBytes = await file.arrayBuffer();
                
                // Enable UI
                splitOptions.style.opacity = '1';
                splitOptions.style.pointerEvents = 'all';
                btnSplit.disabled = false;
            }
        });

        async function splitPDF() {
            const rangeStr = document.getElementById('page-range').value.trim();
            const status = document.getElementById('split-status');

            if (!rangeStr) {
                status.innerText = "Please enter a page range (e.g., 1-5).";
                return;
            }

            btnSplit.disabled = true;
            btnSplit.innerText = "Processing...";

            try {
                // 1. Load source PDF
                const srcDoc = await PDFDocument.load(splitFileBytes);
                const totalPages = srcDoc.getPageCount();

                // 2. Parse Range
                const pagesToKeep = parsePageRange(rangeStr, totalPages);
                
                if (pagesToKeep.length === 0) {
                    throw new Error("Invalid page range or pages out of bounds.");
                }

                // 3. Create new PDF
                const newDoc = await PDFDocument.create();
                const copiedPages = await newDoc.copyPages(srcDoc, pagesToKeep);
                copiedPages.forEach((page) => newDoc.addPage(page));

                // 4. Save
                const pdfBytes = await newDoc.save();
                const blob = new Blob([pdfBytes], { type: "application/pdf" });
                saveAs(blob, `${splitFileName}_split.pdf`);

                status.innerText = "Success! Download started.";

            } catch (err) {
                status.innerText = "Error: " + err.message;
            } finally {
                btnSplit.disabled = false;
                btnSplit.innerText = "Extract & Download";
            }
        }

        // Helper: Parse string like "1-3, 5" into [0, 1, 2, 4]
        function parsePageRange(input, maxPages) {
            const pages = new Set();
            const parts = input.split(',');

            parts.forEach(part => {
                const cleanPart = part.trim();
                if (cleanPart.includes('-')) {
                    const [start, end] = cleanPart.split('-').map(num => parseInt(num));
                    if (!isNaN(start) && !isNaN(end)) {
                        for (let i = start; i <= end; i++) {
                            if (i > 0 && i <= maxPages) pages.add(i - 1); // Convert 1-based to 0-based
                        }
                    }
                } else {
                    const page = parseInt(cleanPart);
                    if (!isNaN(page) && page > 0 && page <= maxPages) {
                        pages.add(page - 1);
                    }
                }
            });

            return Array.from(pages).sort((a, b) => a - b);
        }

        // Drag and drop visual effects
        ['merge-drop', 'split-drop'].forEach(id => {
            const el = document.getElementById(id);
            el.addEventListener('dragover', (e) => {
                e.preventDefault();
                el.style.backgroundColor = '#EFF6FF';
                el.style.borderColor = '#1d4ed8';
            });
            el.addEventListener('dragleave', (e) => {
                el.style.backgroundColor = '#f8fafc';
                el.style.borderColor = '#2563EB';
            });
            el.addEventListener('drop', (e) => {
                e.preventDefault();
                el.style.backgroundColor = '#f8fafc';
                el.style.borderColor = '#2563EB';
                
                // Manually trigger input change
                const input = el.querySelector('input');
                if (e.dataTransfer.files.length) {
                    input.files = e.dataTransfer.files;
                    input.dispatchEvent(new Event('change'));
                }
            });
        });

    </script>
</body>
</html>
